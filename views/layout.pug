mixin linkItem(item)
    .item.col.s12
        .card.masonry-content
            .card-content(dir="auto")
                
                .card-title
                    .row
                        .col.s4
                            img.link-image(src=item.pic, alt="")
                        .col.s8
                            p= item.title
                            span.badge(dir="ltr")= item.extra
                    h6!= item.description
            .card-action
                a(href="/visit/"+item._id target='blank') visit



mixin topicItem(topic)

    .col.s12
        .divider
        .row
            .col.s2
                img.link-image(src=topic.pic, alt="")
            .col.s8
                h3
                    b.grey-text.darken-3= topic.title
                blockquote= topic.description
            .col.s2
                a(href='/topic/'+topic.title class="waves-effect waves-light btn") view all

mixin pagination(pagination,path)
    - var n = 1;
    ul.pagination.col.s12
        if pagination.page == 1
            li.disabled
                a
                    i.material-icons chevron_left
        else
            li.waves-effect
                a(href=pagination.path + "page="+ pagination.page - 1)
                    i.material-icons chevron_left
        
        while n < pagination.lastPage
            if pagination.page == n
                li.active
                    a(href= pagination.path + "page="+ n )= n++
            else
                li.waves-effect
                    a(href= pagination.path + "page="+ n )= n++
        if pagination.page == pagination.lastPage
                li.disabled
                    a
                        i.material-icons chevron_right
        else
            li.waves-effect
                a(href=pagination.path + "page="+ pagination.page + 1)
                    i.material-icons chevron_right

